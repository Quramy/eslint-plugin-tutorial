{
  "name": "@quramy/eslint-plugin-tutorial",
  "version": "1.0.0",
  "description": "A tutorial repository to create your first eslint rule",
  "main": "lib/index.js",
  "scripts": {
    "start-tutorial": "rimraf \"src/rules/**/*\" && rimraf src/index.ts",
    "clean": "rimraf lib",
    "build": "tsc",
    "test": "jest",
    "prepublish": "npm run clean && npm run build"
  },
  "files": [
    "README.md",
    "package.json",
    "lib"
  ],
  "keywords": ["eslint", "typescript", "example"],
  "author": "Quramy",
  "license": "MIT",
  "devDependencies": {
    "@types/eslint": "^4.16.6",
    "@types/node": "^11.10.4",
    "eslint": "^5.15.0",
    "jest": "^23.6.0",
    "rimraf": "^2.6.3",
    "ts-jest": "^23.10.4",
    "typescript": "~3.3.0"
  },
  "dependencies": {},
  "peerDependencies": {
    "eslint": "^4.0.0 || ^5.0.0"
  },
  "jest": {
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "testRegex": "(src/.*\\.test)\\.ts$",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "\\.d\\.ts$",
      "lib/.*"
    ],
    "moduleFileExtensions": [
      "js",
      "ts",
      "json"
    ]
  }
}
